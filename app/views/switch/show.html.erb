<% if !@connect_error %>

<h2>Nazwa: <%= @device.name %></h2>
<h3>IP: <%= @device.ip %></h3>


<table class="ports">
<tr>
	<th>Nr</th>
	<th>Opis portu</th>
	<th>Admin State</th>
	<th>Operational State</th>
</tr>

	<% @ports.each do |p| %>
	<tr>
	<td><%= p[1] %></td>
	<td><%= p[2]%></td>
	<%if p[3] == 1 %>
		<td class="up">	UP </td>
	<% else %>
		<td class="down">	DOWN </td>
	<% end %>
	<%if p[4] == 1 %>
		<td class="up">UP</td>
	<% else %>
		<td class="down">DOWN</td>
	<% end %>
	</tr>
	<% end %>
</table>
<% end %>

<p>
<%= link_to "Lista urzadzeń", @list_path %>
</p>

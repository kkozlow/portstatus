<% index = 0 %>
<h2>Lista dostępnych urządzeń:</h2>

<p>



<table class="ports">
<tr>
	<th></th>
	<th>Nazwa</th>
	<th>Ip</th>
	<th></th>
</tr>
<% for he in @hes %>
	<% if !he.devices.empty? %>
	  <tr>
		<td>
	      <b><%= he.address %></b>
	    </td>
	  </tr>
	    <% he.devices.each do |device| %>
	    	<tr>
				<td><%= index = index + 1 %></td>
				<td><%= device[:name] %></td>
				<td><%= device[:ip] %></td>
				<td><%= link_to "Pokaż stan portów",  switch_path(device)%></td>
			</tr>
		<% end %>
	<% end %>
<% end %>
</table>


</p>

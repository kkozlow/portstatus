<h2>Lista dostępnych urządzeń:</h2>

<p>
<table class="ports">
<tr>
	<th>Nr</th>
	<th>Name</th>
	<th>Ip</th>
	<th></th>
</tr>

	<% @devices.each_with_index do |device, index| %>
	<tr>
	<td><%= index %></td>
	<td><%= device[:name] %></td>
	<td><%= device[:ip] %></td>
	<td><%= link_to "Pokaż stan portów",  switch_path(device)%></td>
	</tr>
	<% end %>
</table>
</p>
